{
  "name": "Mubi Score",
  "version": "0.1",
  "description": "Add movie scores to Mubi's Now Showing page.",
  "permissions": ["storage", "https://www.omdbapi.com/"],
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["https://mubi.com/showing"],
      "run_at": "document_idle",
      "css": ["content.css"],
      "js": ["contentScript.js"]
    }
  ]
}
